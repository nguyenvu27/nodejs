<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        .thea {
            text-decoration: none;

        }

        .thea:hover {
            text-decoration: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="/">IAMVU</a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Rooms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Hotels">Hotels</a>
            </li>

        </ul>
    </nav>

    <div class="container">
        <h2>IAMVU</h2>

        <form action="/rooms/save-add" method="post" enctype="multipart/form-data" onsubmit="return validatedata()" >
          
            <div class="form-group">
                <label>Room Number:</label>
                <input type="text" class="form-control" name="room_number" id="room_numbe" >
                <span style="color: green;" id="rName-err"></span>
            </div>
            <div class="form-group">
                <label>Floor:</label>
                <input type="number" class="form-control" name="floor" id="room_floor">
                  <span style="color: green;" id="rFloor-err"></span>
            </div>
            <div class="form-group">
                <label>Hotelid:</label>
                <select name="hotelid" class="form-control">
                    {{#each hotels}}
                    <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label>Single Room:</label>
                {{{check_single_room }}}

          
            </div>
            <div class="form-group">
                <label>Price:</label>
                <input type="number" class="form-control" name="price" id="room_price">
                 <span style="color:green;" id="rPrice-err"></span>
            </div>
            <div class="form-group">
                <label>Status:</label>
                {{{check_room_status }}}

               
            </div>

            <div class="form-group">
                <label>Image:</label>
                <input type="file" class="form-control" name="image" id="room_image">
                <span style="color: green;" id="rImage-err"></span>
            </div>

            <div class="form-group">
                <label>Detail:</label>
                <textarea type="text" class="form-control" name="detail" id="room_detail"> </textarea>
                <span style="color: green;margin-top: 20px;" id="rDetail-err"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/" class="btn btn-primary">Hủy</a>
        </form>


        <!-- Social Footer, Single Coloured -->
        <!-- Include Font Awesome Stylesheet in Header -->
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <!-- // -->
        <div class="container">

            <hr />
            <div class="text-center center-block">
                <p class="txt-railway">- bienvxph05562@fpt.edu.vn -</p>
                <br />
                <a href="https://www.facebook.com/vuvan.bien.1426"><i
                        class="fa fa-facebook-square fa-3x social"></i></a>
                <a href="https://twitter.com/nguyen_vu27?lang=vi"><i class="fa fa-twitter-square fa-3x social"></i></a>
                <a href="https://plus.google.com/u/1/discover?pageId=none"><i
                        class="fa fa-google-plus-square fa-3x social"></i></a>
                <a href="https://mail.google.com/mail/u/1/#inbox"><i class="fa fa-envelope-square fa-3x social"></i></a>
            </div>
            <hr />
        </div>

<script>
    function validatedata(){
        var pName = document.querySelector('#room_numbe').value;
        if(pName == ""){
            document.querySelector('#rName-err').innerText = "Vui lòng nhập mã phòng của khách sạn";
            return false;
        }
        else{
            document.querySelector('#rName-err').innerText = "";
        }
          var pName = document.querySelector('#room_floor').value;
        if(pName == ""){
            document.querySelector('#rFloor-err').innerText = "Thuộc tầng bao nhiêu";
            return false;
        }
        else{
            document.querySelector('#rFloor-err').innerText = "";
        }
          var pName = document.querySelector('#room_price').value;
        if(pName == ""){
            document.querySelector('#rPrice-err').innerText = "Vui lòng nhập giá phòng";
            return false;
        }
        else{
            document.querySelector('#rPrice-err').innerText = "";
        }
          var pName = document.querySelector('#room_image').value;
        if(pName == ""){
            document.querySelector('#rImage-err').innerText = "Vui lòng chọn ảnh";
            return false;
        }
        else{
            document.querySelector('#rImage-err').innerText = "";
        }
          var pName = document.querySelector('#room_detail').value;
        if(pName == ""){
            document.querySelector('#rDetail-err').innerText = "Vui lòng nhập phần đánh giá";
            return false;
        }
        else{
            document.querySelector('#rDetail-err').innerText = "";
        }
    }
</script>


</body>

</html>