<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        .thea {
            text-decoration: none;

        }

        .thea:hover {
            text-decoration: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="/">IAMVU</a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Rooms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Hotels">Hotels</a>
            </li>

        </ul>
    </nav>

    <div class="container">
        <h2>IAMVU</h2>

        <form action="/hotels/save-add" method="post" enctype="multipart/form-data" onsubmit="return validatedata()">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" name="name" id="hotel_name">
                <span style="color: green;" id="hName-err"></span>
            </div>
            <div class="form-group">
                <label>City:</label>
                <input type="text" class="form-control" name="city"  id="hotel_city" >
                <span style="color: green;" id="hCity-err"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Address:</label>
                <input type="text" class="form-control" name="address" id="hotel_address">
                <span style="color: green;" id="hAddress-err"></span>
            </div>
             <div class="form-group">
                <label>Owner:</label>
                <input type="text" class="form-control" name="owner" id="hotel_owner">
                 <span style="color: green;" id="hOwner-err"></span>
            </div>
             <div class="form-group">
                <label>License Number:</label>
                <input type="number" class="form-control" name="license_number" id="hotel_licensenumber" >
                <span style="color: green;" id="hLicensenumber-err"></span>
            </div>
              <div class="form-group">
                <label>Total Floor:</label>
                <input type="number" class="form-control" name="total_floor" id="hotel_totalfloor">
                 <span style="color: green;" id="hTotalfloor-err"></span>
            </div>

              <div class="form-group">
                <label>Image:</label>
                <input type="file" class="form-control" name="image" id="hotel_image" >
                <span style="color: green;" id="hImage-err"></span>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/Hotels" class="btn btn-primary">Hủy</a>
        </form>


        <!-- Social Footer, Single Coloured -->
        <!-- Include Font Awesome Stylesheet in Header -->
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <!-- // -->
        <div class="container">

            <hr />
            <div class="text-center center-block">
                <p class="txt-railway">- bienvxph05562@fpt.edu.vn -</p>
                <br />
                <a href="https://www.facebook.com/vuvan.bien.1426"><i
                        class="fa fa-facebook-square fa-3x social"></i></a>
                <a href="https://twitter.com/nguyen_vu27?lang=vi"><i class="fa fa-twitter-square fa-3x social"></i></a>
                <a href="https://plus.google.com/u/1/discover?pageId=none"><i
                        class="fa fa-google-plus-square fa-3x social"></i></a>
                <a href="https://mail.google.com/mail/u/1/#inbox"><i class="fa fa-envelope-square fa-3x social"></i></a>
            </div>
            <hr />
        </div>

       <script>
 
    function validatedata(){
        var pName = document.querySelector('#hotel_name').value;
        if(pName == ""){
            document.querySelector('#hName-err').innerText = "Vui lòng nhập tên của khách sạn";
            return false;
        }
        else{
            document.querySelector('#hName-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_city').value;
        if(pName == ""){
            document.querySelector('#hCity-err').innerText = "Vui lòng nhập tên thành phố";
            return false;
        }
        else{
            document.querySelector('#hCity-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_address').value;
        if(pName == ""){
            document.querySelector('#hAddress-err').innerText = "Vui lòng nhập địa chỉ";
            return false;
        }
        else{
            document.querySelector('#hAddress-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_owner').value;
        if(pName == ""){
            document.querySelector('#hOwner-err').innerText = "Vui lòng nhập tên chủ tịch";
            return false;
        }
        else{
            document.querySelector('#hOwner-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_licensenumber').value;
        if(pName == ""){
            document.querySelector('#hLicensenumber-err').innerText = "Vui lòng nhập mã đăng ký";
            return false;
        }
        else{
            document.querySelector('#hLicensenumber-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_totalfloor').value;
        if(pName == ""){
            document.querySelector('#hTotalfloor-err').innerText = "Vui lòng số tầng khách sạn";
            return false;
        }
        else{
            document.querySelector('#hTotalfloor-err').innerText = "";
        }
          var pName = document.querySelector('#hotel_image').value;
        if(pName == ""){
            document.querySelector('#hImage-err').innerText = "Vui lòng chọn ảnh";
            return false;
        }
        else{
            document.querySelector('#hImage-err').innerText = "";
        }
    }
</script>
</body>

</html>